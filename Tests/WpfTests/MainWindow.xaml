<Window x:Class="WpfTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTests"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="476">
    <Grid>
        <Button Name="btnSend" Content="Отправить" HorizontalAlignment="Center" Height="32" VerticalAlignment="Top" Width="112" Margin="0,240,0,0" Click="BtnSendClick">
            <Button.Effect>
                <BlurEffect Radius="3" KernelType="Gaussian" RenderingBias="Performance"/>
            </Button.Effect>
        </Button>
        <TextBox x:Name="tbLoginEdit" HorizontalAlignment="Left" Margin="66,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <PasswordBox x:Name="pbPasswordEdit" HorizontalAlignment="Left" Margin="279,154,0,0" VerticalAlignment="Top" Width="160"/>
        <TextBlock HorizontalAlignment="Left" Margin="66,136,0,0" Text="Имя пользователя" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="348,126,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
